<h1><%= @user.username %></h1>

<ul>
<% @user.goals.each do |goal| %>
  <% next if current_user != @user && !goal.public %>
  <li><%= link_to "#{goal.title}", "/users/#{@user.id}/goals/#{goal.id}"%> <%= "Completed" if goal.completed %> <%= "Private" unless goal.public %></li>
<% end %>
</ul>

<h3>Comments</h3>
<% @user.user_comments.each do |uc| %>
<%= uc.author.username %><br>
<%= uc.body %>
<br><br>
<% end %>

<h3>New Comment</h3>
<form action="<%= user_user_comments_url(@user.id) %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="Body">Body</label>
  <input type="text" name="user_comment[body]" id="Body">

  <br><br>

  <input type="hidden" name="user_comment[user_id]" value="<%= @user.id %>">
  <input type="submit" value="Add Comment">
</form>

<%= button_to "Index", goals_url, method: :get %>
